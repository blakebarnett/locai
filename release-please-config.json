{
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json",
  "release-type": "rust",
  "packages": {
    "locai": {
      "package-name": "locai",
      "release-type": "rust",
      "component": "locai-core"
    },
    "locai-server": {
      "package-name": "locai-server", 
      "release-type": "rust",
      "component": "locai-server"
    },
    "locai-cli": {
      "package-name": "locai-cli",
      "release-type": "rust",
      "component": "locai-cli"
    }
  },
  "extra-files": [
    "README.md"
  ],
  "separate-pull-requests": false,
  "group-pull-request-title-pattern": "chore: release ${version}",
  "release-search-depth": 400,
  "commit-search-depth": 500
} 